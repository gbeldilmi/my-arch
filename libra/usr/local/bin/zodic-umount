#!/usr/bin/env bash

_host="aquarius"
_mountpoint="/zodiac" # must be absolute path

function _umount() {
  umount -l $_mountpoint && echo "Unmounted $_mountpoint"
  if [ -L $_link ]
  then
    rm $_link && echo "Link removed"
  else
    echo "Link not found"
  fi
}

if [ "$EUID" -ne 0 ]
then
  echo "Please run as root"
else
  ping -c 8 $_host > /dev/null
  if [ $? -eq 0 ]
  then
    _umount
  else
    echo "Host unreachable"
    echo "Do you want to unmount $_mountpoint anyway ? [y/N]"
    read _force
    if [ "$_force" == "y" ]
    then
      _umount
    else
      echo "$_mountpoint still mounted"
    fi
  fi
fi

unset -f _umount
