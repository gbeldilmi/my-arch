#!/usr/bin/env bash

_date=$(date +%F)
_directory="/zodiac/workspace/$USER"
_out="/zodiac/backup/zodiac-$USER-$_date"

function _archive() {
  tar -I pixz -cf $_out.tar.xz  $_directory && echo "Archive saved to $_out.tar.xz"
}

function _checksum() {
  find $_directory -type f -exec sha256sum {} \; | sort -k 2 > $_out.sha256.txt
  echo "Checksums saved to $_out.sha256.txt"
}

_checksum &
_archive

unset -f _archive
unset -f _checksum
